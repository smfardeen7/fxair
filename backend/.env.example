# Server
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Frontend (for CORS)
FRONTEND_ORIGIN=http://localhost:5173

# JWT
JWT_SECRET=your-super-secret-key-min-32-chars
JWT_EXPIRES_IN=7d

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/fxair

# FX Rate API (e.g. ExchangeRate-API, Open Exchange Rates, OANDA)
FX_RATE_API_KEY=
FX_RATE_API_URL=https://v6.exchangerate-api.com/v6

# Optional: Plaid (Open Banking)
PLAID_CLIENT_ID=
PLAID_SECRET=

# Optional: Email (SendGrid, AWS SES)
SENDGRID_API_KEY=
NOTIFICATION_FROM_EMAIL=noreply@fxair.com

# Optional: SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
